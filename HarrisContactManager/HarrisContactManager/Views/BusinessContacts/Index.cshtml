@model IEnumerable<HarrisContactManager.Models.BusinessContacts>

@{
    ViewData["Title"] = "Business Contacts";
}

    <h1>Business Contacts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusinessFname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessLname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessEmial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessAddress1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessAddress2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessPostCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessFname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessLname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessEmial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessAddress2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessPostCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BusinessContactsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BusinessContactsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BusinessContactsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
